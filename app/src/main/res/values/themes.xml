<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.ControlDCMotor" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <!-- Theme with no action bar for splash screen -->
    <style name="Theme.ControlDCMotor.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- App bar styles -->
    <style name="Theme.ControlDCMotor.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <!-- Popup styles -->
    <style name="Theme.ControlDCMotor.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>
